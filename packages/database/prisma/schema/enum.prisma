model UserType {
  id   String @id @default(uuid())
  name String @unique
}

model EmployeeRole {
  id   String @id @default(uuid())
  name String @unique
}

model Department {
  name             String
  receptionNodeID  String @id
  receptionNode    Node   @relation(fields: [receptionNodeID], references: [nodeID])
}

model RequestPriority {
  id   String @id @default(uuid())
  name String @unique
}

model RequestStatus {
  id   String @id @default(uuid())
  name String @unique
}

model Building {
  id   String @id @default(uuid())
  name String @unique
}

model MedicalDevice {
  id   String @id @default(uuid())
  name String @unique
}

model MedicalDeviceStatus {
  id   String @id @default(uuid())
  name String @unique
}

model RequestNonemergent {
  id   String @id @default(uuid())
  name String @unique
}

model NodeType {
  id   String @id @default(uuid())
  name String @unique
  nodes Node[]
}